<%= form_for post do |form| %>
  <% if post.errors.any? %>
    <% post.errors.each do |error| %>
      <div class="alert alert-warning shadow-lg m-2">
        <div>
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
          <span><%= error.full_message %></span>
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="mb-5">
    <%= form.label :title, class: 'font-medium' %>
    <%= form.text_field :title, class: 'input input-bordered w-full' %>
  </div>

  <div class="mb-5">
    <%= form.label :content, class: 'font-medium' %>
    <%= form.text_area :content, class: 'textarea input-bordered w-full' %>
  </div>

  <div class="mb-5">
    <%= form.label :tags, class: 'font-medium' %>
    <%= form.text_field :tags, value: post.tags.map(&:name).join(', '), class: 'input input-bordered w-full' %>
  </div>

  <%= form.submit 'Save', class: 'btn btn-primary' %>
  <%= link_to 'Cancel', dashboard_path, class: 'btn btn-ghost' %>
<% end %>
