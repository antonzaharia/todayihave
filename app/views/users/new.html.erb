<div class="mx-auto my-10 rounded-lg shadow p-10 max-w-lg border-gray-600 border-solid border">
  <h1 class="text-center text-2xl mb-6">Sign up</h1>

  <%= form_for @user, url: users_path do |f| %>

    <div class="mb-6">
      <%= f.label :email, class: 'font-medium' %>
      <%= f.email_field :email, class: 'input input-bordered w-full' %>
    </div>

    <div class="mb-6">
      <%= f.label :username, class: 'font-medium' %>
      <%= f.text_field :username, class: 'input input-bordered w-full' %>
    </div>

    <div class="mb-6">
      <%= f.label :password, class: 'font-medium' %>
      <%= f.password_field :password, class: 'input input-bordered w-full' %>
    </div>

    <% if @user.errors.any? %>
      <% @user.errors.each do |error| %>
        <div class="alert alert-error shadow-lg my-2">
          <%= error.full_message %>
        </div>
      <% end %>
    <% end %>

    <%= f.submit 'Sign up', class: 'btn' %>

  <% end %>

</div>